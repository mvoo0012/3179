
{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 400,
  "padding": {"left": 30, "right": 40, "top": 30, "bottom": 10},
  "autosize": {"type": "none", "contains": "padding"},
  "title": {
    "text": "Skin Cancer Risk in Australia (2007-2024)",
    "align": "right"
  },
  "signals": [
    {"name": "radius", "update": "width / 2"},
    {
      "name": "Selected_Year",
      "value": 2007,
      "bind": {
        "input": "range",
        "min": 2007,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    },
    {
      "name": "selected_gender",
      "value": "Persons",
      "bind": {
        "input": "select",
        "labels": ["All/Persons","Males", "Females"],
        "options": ["Persons","Males", "Females"],
        "name": "Select Gender: "
      }
    },
    {
      "name": "selected_cancer_type",
      "value": "Melanoma of the skin",
      "bind": {
        "input": "select",
        "options": ["Melanoma of the skin", "Non-melanoma skin cancer (rare types)"],
        "name": "Select Cancer Type: "
      }
    }
  ],
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/mvoo0012/3179/refs/heads/main/data/Cancer_risk_10.csv",
      "format": {"type": "csv", "delimiter": ","},
      "transform": [
        {
          "type": "filter",
          "expr": "datum.Sex == selected_gender && datum.Cancer == selected_cancer_type && datum.Year == Selected_Year"
        }
      ]
    },
    {
      "name": "Risk_Data",
      "source": "table",
      "transform": [
        {"type": "aggregate", "groupby": ["Type", "Age"]}
      ]
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": {"signal": "[-PI, PI]"},
      "padding": 0.5,
      "domain": {"data": "table", "field": "Age"}
    },
    {
      "name": "radial",
      "type": "log",
      "range": {"signal": "[0, radius]"},
      "zero": false,
      "nice": true,
      "domain": {"data": "table", "field": "Risk"},
      "domainMin": 0.001 
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "table", "field": "Type"},
      "range": {"scheme": "category10"}
      
    }
  ],
  "encode": {"enter": {"x": {"signal": "radius"}, "y": {"signal": "radius"}}},
  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": {"data": "table", "name": "facet", "groupby": ["Type"]}
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": {"data": "facet"},
          "encode": {
            "enter": {
              "interpolate": {"value": "linear-closed"},
              "x": {
                "signal": "scale('radial', datum.Risk) * cos(scale('angular', datum.Age))"
              },
              "y": {
                "signal": "scale('radial', datum.Risk) * sin(scale('angular', datum.Age))"
              },
              "stroke": {"scale": "color", "field": "Type"},
              "strokeWidth": {"value": 1},
              "fill": {"scale": "color", "field": "Type"},
              "fillOpacity": {"value": 0.1},
              "tooltip": {"signal": "{'Risk': datum.Type, 'Age': datum.Age, 'Risk %': datum.Risk + '%', 'Risk in X people': datum.Risk_1_X}"}
            }
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": {"data": "Risk_Data"},
      "zindex": 0,
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "x2": {
            "signal": "radius * cos(scale('angular', datum['Age']))"
          },
          "y2": {
            "signal": "radius * sin(scale('angular', datum['Age']))"
          },
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": {"data": "radial-grid"},
      "encode": {
        "enter": {
          "interpolate": {"value": "linear-closed"},
          "x": {"field": "x2"},
          "y": {"field": "y2"},
          "stroke": {"value": "lightgray"},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": {"data": "Risk_Data"},
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {
            "signal": "(radius + 5) * cos(scale('angular', datum.Age))"
          },
          "y": {
            "signal": "(radius + 5) * sin(scale('angular', datum.Age))"
          },
          "text": {"field": "Age"},
          "align": [
            {
              "test": "abs(scale('angular', datum.Age)) > PI/2",
              "value": "left"
            },
            {"value": "center"}
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.Age) > 0",
              "value": "bottom"
            },
            {
              "test": "scale('angular', datum.Age) == 0",
              "value": "top"
            },
            {"value": "top"}
          ],
          "fill": {"value": "black"},
          "fontSize": {"value": 10},
          "fontWeight": {"value": "bold"}
        }
      }
    }
  ],
  "opacity": {"value": 0.6}
}
